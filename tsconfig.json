{
  "compileOnSave"  : true,
  "compilerOptions": {
    "module"                        : "commonjs",
    "target"                        : "es6",
    "noImplicitAny"                 : true,
    "noImplicitReturns"             : true,
    "sourceMap"                     : true,
    "newLine"                       : "lf",
    "removeComments"                : true,
    "listFiles"                     : false,
    "declaration"                   : true,
    "declarationDir"                : "tsd",
    "noLib"                         : false,
    "strictNullChecks"              : false,
    "alwaysStrict"                  : true,
    "traceResolution"               : false,
    "noUnusedLocals"                : true,
    "noUnusedParameters"            : true,
    "noFallthroughCasesInSwitch"    : false,
    "allowUnusedLabels"             : true,
    "suppressImplicitAnyIndexErrors": true,
    "outDir"                        : "lib"
  },
  "exclude"        : [
    "node_modules"
  ],
  "files"          : [
    "router.ts",
    "test.ts"
  ]
}
